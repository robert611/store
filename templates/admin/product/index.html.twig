{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block admin_content %}    
    <div class="responsive-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>State</th>
                    <th>Price</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.state }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('admin_product_show', {'id': product.id}) }}">show</a>
                        <a class="btn btn-info" href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
