{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block admin_content %}
    <div class="responsive-table">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Descritpion</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ product.state }}</td>
                </tr>
                <tr>
                    <th>Auction Type</th>
                    <td>{{ product.auctionType }}</td>
                </tr>
                <tr>
                    <th>Delivery Methods</th>
                    <td>
                        {% for delivery in product.deliveryTypes %}
                            [{{ delivery.name }}]
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Delivery Time</th>
                    <td>{{ product.deliveryTime }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('admin_product_index') }}">back to list</a>

        <a class="btn btn-info" href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>

        {{ include('admin/product/_delete_form.html.twig') }}
    </div>
{% endblock %}
